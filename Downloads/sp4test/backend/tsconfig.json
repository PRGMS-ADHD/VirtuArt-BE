{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "isolatedModules": true,
    "outDir": "./build"
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts", "src/**/__mocks__/*.ts"]
}
